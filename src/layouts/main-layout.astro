---
import RootLayout from "./root-layout.astro";
import { ModeToggle } from "@/components/react/ModeToggle";
const { title } = Astro.props;
---

<RootLayout title={title}>
  <nav
    class="flex flex-row px-10 justify-between items-baseline w-full my-3 border-y py-3"
  >
    <div>
      <a href="/">Logo</a>
    </div>
    <div class="flex gap-8 justify-center uppercase font-mono">
      <a href="/about" class="hover:underline">About</a>
      <a href="/blogs" class="hover:underline">Blogs</a>
      <ModeToggle client:load />
    </div>
  </nav>
  <div class="px-4 mt-10">
    <slot />
  </div>
</RootLayout>
